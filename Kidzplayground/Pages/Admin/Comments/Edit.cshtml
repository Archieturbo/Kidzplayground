@page
@model Kidzplayground.Pages.Admin.Comments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.Id" />
            <div class="form-group">
                <label asp-for="Comment.Title" class="control-label"></label>
                <input asp-for="Comment.Title" class="form-control" />
                <span asp-validation-for="Comment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.TextContent" class="control-label"></label>
                <input asp-for="Comment.TextContent" class="form-control" />
                <span asp-validation-for="Comment.TextContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Date" class="control-label"></label>
                <input asp-for="Comment.Date" class="form-control" />
                <span asp-validation-for="Comment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.IsFlagged" class="control-label"></label>
                <input asp-for="Comment.IsFlagged" class="form-control" />
                <span asp-validation-for="Comment.IsFlagged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.PostId" class="control-label"></label>
                <select asp-for="Comment.PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                <span asp-validation-for="Comment.PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.UserId" class="control-label"></label>
                <input asp-for="Comment.UserId" class="form-control" />
                <span asp-validation-for="Comment.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.UserEmail" class="control-label"></label>
                <input asp-for="Comment.UserEmail" class="form-control" />
                <span asp-validation-for="Comment.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
